{
  "manifest_version": 2,

  "name": "Plug-PM",
  "description": "Private Messaging for Plug.dj.",
  "version": "0.7",
  "icons": { "128": "icons/icon128.png" },
  "web_accessible_resources": ["scripts/plug-pm.js"],

  "content_scripts": [
    {
    	"matches": ["*://plug.dj/*"],
    	"js": ["content_script.js"],
    	"run_at": "document_idle"
    }
  ]
}
